<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WearableCommunicationFragment">

    <!-- AppBarLayout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- latestMessageContainer -->
    <LinearLayout
        android:id="@+id/latestMessageContainer"
        android:layout_width="179dp"
        android:layout_height="90dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="683dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- ImageView -->
        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="126dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/heart_icon_svg" />

        <!-- TextView -->
        <TextView
            android:id="@+id/latestMessageTextView"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/init"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- deviceconnectionStatusTv -->

    <!-- Toolbar -->

    <TextView
        android:id="@+id/deviceconnectionStatusTv"
        android:visibility="gone"
        android:layout_width="211dp"
        android:layout_height="57dp"
        android:layout_above="@id/toolbar"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="169dp"
        android:layout_marginBottom="-160dp"
        android:layout_toStartOf="@id/latestMessageContainer"
        android:text="@string/wearable_device_is_connected"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:textSize="40dp"
        android:text="Healthapp"
        android:textStyle="bold"/>
</RelativeLayout>
