<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Edit Icon -->

        <!-- Name TextView -->
        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="76dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/ageGenderLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/pencil" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <!-- Age and Gender LinearLayout -->
        <LinearLayout
            android:id="@+id/ageGenderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- BPS TextView -->
        <TextView
            android:id="@+id/bpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ageGenderLayout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="47dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:text="BPS"
            android:textSize="18sp"
            android:textColor="#333333" />

        <!-- Divider between BPS and FBS -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bpsTextView"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <!-- FBS TextView -->
        <TextView
            android:id="@+id/fbsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bpsTextView"
            android:text="FBS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333" />

        <!-- Divider between FBS and Cholesterol -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/fbsTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <!-- Cholesterol TextView -->
        <TextView
            android:id="@+id/cholesterolTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fbsTextView"
            android:text="Cholesterol"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333" />

        <!-- Divider between Cholesterol and Blood Group -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cholesterolTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <!-- Blood Group TextView -->
        <TextView
            android:id="@+id/bloodGroupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cholesterolTextView"
            android:text="Blood Group"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333" />

        <!-- Divider between Blood Group and Doctor ID -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bloodGroupTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <!-- Doctor ID TextView -->
        <TextView
            android:id="@+id/doctorIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bloodGroupTextView"
            android:text="Doctor ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333" />

        <!-- Divider between Doctor ID and Height -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/doctorIdTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <!-- Height TextView -->
        <TextView
            android:id="@+id/heightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctorIdTextView"
            android:text="Height"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333" />

        <!-- Divider between Height and Weight -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/heightTextView"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/black" />

        <!-- Weight TextView -->
        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heightTextView"
            android:text="Weight"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333" />

        <!-- Divider between Weight and Sign Out Button -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/weightTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weightTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/redbutton"
            android:text="Sign Out"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="50dp" />


    </RelativeLayout>

</ScrollView>
